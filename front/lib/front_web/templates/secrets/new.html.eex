<%= if @permissions["organization.secrets.manage"] do %>
  <%= render FrontWeb.SecretsView, "_form.html",
                                 conn: @conn,
                                 secret: @secret,
                                 projects: @projects,
                                 action: secrets_path(@conn, :create),
                                 method: :post,
                                 form_title: "Create Secret",
                                 errors: @errors,
                                 permissions: @permissions
                               %>
<% else %>
  <div class="pv6 tc">
    <div class="f00">🗝</div>
    <p class="f6 measure-narrow center mv3">Sorry, you can’t manage Secrets.<br>Ask organization owner or any of the admins to give you access permission.</p>
  </div>
<% end %>
